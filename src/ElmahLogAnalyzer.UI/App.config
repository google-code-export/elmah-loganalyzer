<?xml version="1.0"?>
<configuration>

	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
	</configSections>
	
	<appSettings>
		<!-- If there is a valid path, logs in the directory will be loaded at startup -->
		<add key="LogsDirectory" value=""/>
	</appSettings>

	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<targets>
			<target name="file" xsi:type="File"
				layout="${level} ${longdate} ${logger} ${message}"
				fileName="${basedir}/logs/elmahofflineviewer_log.txt"
				keepFileOpen="false"
				encoding="iso-8859-2" />
		</targets>

		<rules>
			<!-- Switch to minlevel=Debug for extensive logging -->
			<logger name="*" minlevel="Debug" writeTo="file" />
		</rules>
	</nlog>
	
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
	</startup>
	
</configuration>
